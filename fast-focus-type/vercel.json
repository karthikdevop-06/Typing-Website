{
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/client/index.html"
    }
  ],
  "headers": [
    {
      "source": "/client/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.js"
    }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production"
    },
    "outputDirectory": "client/dist/public"
  }
}
