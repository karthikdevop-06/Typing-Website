{
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/client/index.html"
    }
  ],
  "builds": [
    {
      "src": "client/src/index.html",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.ts"
    }
  ]
}
